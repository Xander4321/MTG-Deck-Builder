<div class="row">

  <h1>Decks</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Format</th>
        <th>Color(s)</th>
        <th>Card Total</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @decks.each do |deck| %>
      <tr>
        <td>
          <%= link_to(deck.name, deck_path(deck)) %>
        </td>
        <td>
          <%= deck.deckstyle.name %>
        </td>
        <td>
          Color of deck goes here.
        </td>
        <td>
          <%= deck.cards.count %>/<%= deck.deckstyle.cardlmt %>
        </td>
        <td>
          <%= button_to "Delete", deck_path(deck), class:"button", method:"delete" %>
        </td>
        <td>
          <%= button_to "Edit", edit_deck_path(deck), class:"button", method:"get" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

<h4>Add New Deck</h4>
  <%= render "form" %>
</div>
